<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HalmanDetail">


    <de.hdodenhof.circleimageview.CircleImageView


            android:src="@drawable/ic_launcher_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="300dp" android:id="@+id/circleImageView"/>
    <TextView
            android:text="@string/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_nama_userdetail"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="72dp"
            android:layout_marginTop="45dp" app:layout_constraintTop_toBottomOf="@+id/circleImageView"
            app:layout_constraintEnd_toStartOf="@+id/tv_nama_detail" android:layout_marginEnd="95dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="397dp"/>
    <TextView
            android:text="@string/tv_name_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_nama_detail"
            android:layout_marginStart="72dp" app:layout_constraintStart_toEndOf="@+id/tv_nama_userdetail"
            android:layout_marginTop="51dp" app:layout_constraintTop_toBottomOf="@+id/circleImageView"
            android:layout_marginEnd="95dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="397dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>